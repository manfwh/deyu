  script.
      $(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('#loginForm').submit(function(event) {
            console.log(event)
            event.preventDefault();
            var form = $(this);
            $.ajax({
                type: 'POST',
                url: '/login',
                data: form.serialize()
            }).done(function(data) {
                console.log(data)
                if(data.code == 40001) {
                    alert('账号或密码错误！')
                    return
                } else {
                    window.location.href = '/oa'
                }
            }).fail(function() {
                alert('登录失败，请联系管理员！')
            })
        })

      })
  


      
    
