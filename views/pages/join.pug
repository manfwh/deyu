extends ../layout
block css
  link(rel="stylesheet", href="/stylesheets/hr.css")
block nav
  include ../includes/nav.pug
    block navbar
        ul.nav.navbar-nav.navbar-right
            li
                a(href='/') 首页    
            li
                a(href="/product") 产品介绍
            li
                a(href="/entityShop") DIV生活馆
            li
                a(href="/about")  关于我们
            li.active
                a(href="/join")  合作招募
